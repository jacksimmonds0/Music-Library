%p#notice= notice

= image_tag @album.image.url(:medium)

%p
  %b= t('artist') + ":"
  = @album.artist.name
%p
  %b= t('genre') + ":"
  = @album.genre.genre
%p
  %b= t('albums.name') + ":"
  = @album.name
%p
  %b= t('year') + ":"
  = @album.year
%p
  %b= t('albums.tracks') + ":"
  = @album.total_songs

= link_to t('edit'), edit_album_path(@album)
\|
= link_to t('back'), albums_path
