%h1= t('listing') + " " + t('shared.artists')

%table
  %thead
    %tr
      %th= t('name')
      %th= t('year')
      %th= t('label')
      %th
      %th
      %th

  %tbody
    - @artists.each do |artist|
      %tr
        %td= artist.name
        %td= artist.year
        %td= artist.label
        %td= link_to t('show'), artist
        %td= link_to t('edit'), edit_artist_path(artist)
        %td= link_to t('destroy'), artist, :method => :delete, :data => { :confirm => t('confirm_message') }

%br

= link_to t('new') + " " + t('artist'), new_artist_path
