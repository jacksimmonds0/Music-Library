= form_for @artist do |f|
  - if @artist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@artist.errors.count, "error")} prohibited this artist from being saved:"
      %ul
        - @artist.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label t('home.contact.name')
    = f.text_field :name
  .field
    = f.label t('albums.year_form')
    = f.number_field :year
  .field
    = f.label t('artists.label_form')
    = f.text_field :label
  .actions
    = f.submit t('save')
